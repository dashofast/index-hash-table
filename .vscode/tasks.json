{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run test_iht_fast",
      "type": "shell",
      "command": "${command:cmake.launchTargetPath}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "clang-tidy-lib",
      "type": "shell",
      "command": "clang-tidy",
      "args": [
        "-p", "build",
        "-header-filter=.*",
        "--use-color=false",
        "src/*.c"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "label": "clang-tidy-tests",
      "type": "shell",
      "command": "clang-tidy -p build --quiet --header-filter=.* --use-color=false tests/*.c ; sleep 5",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": true
      }
    },
    {
      "label": "clang-tidy",
      "dependsOn": [
        "clang-tidy-lib",
        "clang-tidy-tests"
      ],
      "problemMatcher": []
    }
  ]
}