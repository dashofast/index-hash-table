{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run test_iht_fast",
      "type": "shell",
      "command": "${command:cmake.launchTargetPath}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      },
    },
    {
      "label": "clang-tidy",
      "type": "shell",
      "command": "clang-tidy -header-filter=.* src/*.c",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}